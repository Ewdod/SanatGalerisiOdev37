@{
    ViewData["Title"] = "Home Page";
}

@model List<SanatGalerisiAPI.Data.Tablo>

<h2>tablo Listesi</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni tablo Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ressamin Adi</th>
            <th>Resmin Yapilma Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablo in Model)
        {
            <tr>
                <td>@tablo.Id</td>
                <td>@tablo.RessamAdi</td>
                <td>@tablo.ResminYapilmaTarihi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tablo.Id" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@tablo.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
